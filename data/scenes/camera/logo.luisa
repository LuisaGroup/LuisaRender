    scale { 0.07 }
    rotate { 1, 0, 0, 0 }
    // translate { 0, 0.029, 0 }
    // translate { -0.05, 0, 0 }
    // translate { 0, 0, 0.1 }
  }
}

render {
  cameras { @camera }
  spectrum : Hero {}
  shapes {
    @logo,
    @shape_ground
