Shape cbox-light : Mesh {
  file { "../../meshes/cbox-parts/light.obj" }
  light : Diffuse {
    emission : Constant {
      v { 40, 40, 40 }
      semantic { "illuminant" }
    }
  }
}


Shape cbox : Group {
  shapes {
    @cbox-floor,
    @cbox-ceiling,
    @cbox-left-wall,
    @cbox-right-wall,
    @cbox-back-wall,
    @cbox-light
  }
}

Shape dragon-body : Group {
  shapes {
    @dragon-008,
    @dragon-011,
    @dragon-013,
    @dragon-014,
    @dragon-015
  }
  surface { @mat_dragon_body }
}

Shape dragon-sword-cloth : Group {
  shapes {
    @dragon-010
  }
  surface { @cbox-red }
}
Shape dragon-sword-blade : Group {
  shapes {
    @dragon-000,
    @dragon-001,
    @dragon-002,
    @dragon-003,
    @dragon-004,
    @dragon-009
  }
  surface { @mat_dragon_sword }
}
Shape dragon-sword : Group {
  shapes {
    @dragon-sword-blade,
    @dragon-sword-cloth
  }
}

Shape dragon-stone : Group {
  shapes {
    @dragon-005,
    @dragon-007
  }
  surface { @mat_dragon_stone }
}

Shape dragon-plate : Group {
  shapes {
    @dragon-006
  }
  surface { @mat_dragon_plate }
}

Shape dragon-sand : Group {
  shapes {
    @dragon-012
  }
  surface { @mat_dragon_sand }
}

Shape dragon : Group {
  shapes {
    @dragon-sword,
    @dragon-body,
    @dragon-plate,
    @dragon-sand,
    @dragon-stone
  }
  transform : Stack {
      transforms {
          SRT {
            translate { -0.1331, 1.6374, 1.4570 }
          },
          SRT {
            scale { 0.05 }
          },
          SRT {
            rotate { 0, 1, 0, -35 }
          }
      }
  }
}

Film film : Color {
  resolution { 1024 }
  exposure { 0 }
}

Camera camera : Pinhole {
  position { 0.0, 1.0, 5.0 }
  fov { 27.8 }
  spp { 1024 }
  film { @film }
  file { "../../renders/cbox-ref.exr" }
  filter : Gaussian {
    radius { 1 }
  }
}

Integrator pt : MegaPath {
  sampler : Independent {}
  depth { 10 }
  rr_depth { 5 }
}

render {
  spectrum : sRGB {}
  cameras {
    @camera
  }
  shapes {
    @cbox,
    @dragon,
    @paintings
  }
  integrator { @pt }
}
